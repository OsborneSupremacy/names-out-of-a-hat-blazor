{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "Hats": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/hatmetadata"
            },
            "description": "List of hat metadata."
        }
    },
    "required": [
        "Hats"
    ],
    "definitions": {
        "hatmetadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "hatId": {
                    "type": "string",
                    "format": "uuid",
                    "description": "The unique identifier for the hat."
                },
                "hatName": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The display name of the hat."
                }
            },
            "required": [
                "hatId",
                "hatName"
            ]
        }
    }
}