{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "organizerEmail": {
            "type": "string",
            "format": "email",
            "description": "The email address of the organizer"
        },
        "hatId": {
            "type": "string",
            "format": "uuid",
            "description": "The unique identifier of the hat"
        },
        "personId": {
            "type": "string",
            "format": "uuid",
            "description": "The unique identifier of the person to edit"
        },
        "eligibleRecipientIds": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "uuid"
            },
            "description": "The list of eligible recipient UUIDs"
        },
        "name": {
            "type": "string",
            "description": "The updated name of the participant"
        },
        "email": {
            "type": "string",
            "format": "email",
            "description": "The updated email of the participant"
        }
    },
    "required": [
        "organizerEmail",
        "hatId",
        "personId",
        "eligibleRecipientIds",
        "name",
        "email"
    ],
    "additionalProperties": false
}