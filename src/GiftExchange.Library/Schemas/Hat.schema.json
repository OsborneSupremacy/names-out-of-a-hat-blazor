{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "description": "The unique identifier of the hat"
        },
        "name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50,
            "description": "The name of the gift exchange"
        },
        "status": {
            "type": "string",
            "description": "The current status of the gift exchange"
        },
        "additionalInformation": {
            "type": "string",
            "maxLength": 2000,
            "description": "Additional details about the gift exchange"
        },
        "priceRange": {
            "type": "string",
            "maxLength": 50,
            "description": "The suggested price range for gifts"
        },
        "organizer": {
            "$ref": "#/definitions/person",
            "description": "The organizer of the gift exchange"
        },
        "participants": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/participant"
            },
            "description": "The list of participants in the gift exchange"
        }
    },
    "required": [
        "id",
        "name",
        "status",
        "additionalInformation",
        "priceRange",
        "organizer",
        "participants"
    ],
    "additionalProperties": false,
    "definitions": {
        "person": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 100,
                    "description": "The name of the person"
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "minLength": 5,
                    "maxLength": 254,
                    "description": "The email address of the person"
                }
            },
            "required": [
                "name",
                "email"
            ],
            "additionalProperties": false
        },
        "recipient": {
            "type": "object",
            "properties": {
                "person": {
                    "$ref": "#/definitions/person",
                    "description": "The person who could be a potential recipient"
                },
                "eligible": {
                    "type": "boolean",
                    "description": "Whether this person is eligible to be picked as a recipient"
                }
            },
            "required": [
                "person",
                "eligible"
            ],
            "additionalProperties": false
        },
        "participant": {
            "type": "object",
            "properties": {
                "pickedRecipient": {
                    "type": "string",
                    "format": "email",
                    "description": "The email of the person this participant will give a gift to"
                },
                "person": {
                    "$ref": "#/definitions/person",
                    "description": "The person who is participating"
                },
                "invitationSent": {
                    "type": "boolean",
                    "description": "Whether an invitation has been sent to this participant"
                },
                "eligibleRecipients": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "The list of potential recipients for this participant"
                }
            },
            "required": [
                "pickedRecipient",
                "person",
                "invitationSent",
                "eligibleRecipients"
            ],
            "additionalProperties": false
        }
    }
}