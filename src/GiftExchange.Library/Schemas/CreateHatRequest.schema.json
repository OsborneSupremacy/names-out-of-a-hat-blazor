{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "hatName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50,
            "description": "The name of the hat"
        },
        "organizerName": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100,
            "description": "The name of the organizer"
        },
        "organizerEmail": {
            "type": "string",
            "format": "email",
            "minLength": 5,
            "maxLength": 254,
            "description": "The email address of the organizer"
        }
    },
    "required": [
        "hatName",
        "organizerName",
        "organizerEmail"
    ],
    "additionalProperties": false
}