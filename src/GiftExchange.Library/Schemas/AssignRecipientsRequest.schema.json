    "type": "object",
    "properties": {
        "organizerEmail": {
            "type": "string",
            "format": "email",
            "minLength": 5,
            "maxLength": 254,
            "description": "The email address of the organizer"
        },
        "hatId": {
            "type": "string",
            "format": "uuid",
            "description": "The unique identifier of the hat"
        }
